version: "3.9"

# docker-compose -f docker/DockerCompose.saldoextrato-api.v3 up

services:

  config:
    image: viniciusmartinez/config-server:1.0
    ports:
      - "8888:8888"

  credito:
    image: viniciusmartinez/credito-api:1.0
    ports:
      - "8081:8081"

  debito:
    image: viniciusmartinez/debito-api:1.0
    ports:
      - "8082:8082"

  saldoextrato:
    image: viniciusmartinez/saldoextrato-api:3.0
    ports:
      - "8080:8080"
    depends_on:
      - credito
      - debito
      - config
    environment:
      spring_profiles_active: prod
      config_host: config
