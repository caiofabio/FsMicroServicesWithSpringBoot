version: "3.9"

# docker-compose -f docker/DockerCompose.saldoextrato-api.v2 up

services:

  credito:
    image: viniciusmartinez/credito-api:1.0
    ports:
      - "8081:8081"

  debito:
    image: viniciusmartinez/debito-api:1.0
    ports:
      - "8082:8082"

  saldoextrato:
    image: viniciusmartinez/saldoextrato-api:2.0
    ports:
      - "8080:8080"
    depends_on:
      - credito
      - debito
    environment:
      CREDITO_URL: http://credito:8081/api/v1/credito
      DEBITO_URL: http://debito:8082/api/v1/debito
