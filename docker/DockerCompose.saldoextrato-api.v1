version: "3.9"

services:

  credito:
    image: viniciusmartinez/credito-api:1.0
    ports:
      - "8081:8081"

  debito:
    image: viniciusmartinez/debito-api:1.0
    ports:
      - "8082:8082"

  saldoextrato:
    image: viniciusmartinez/saldoextrato-api:1.0
    ports:
      - "8080:8080"
    depends_on:
      - credito
      - debito
